    }
    /*search box*/
    .main {
        width: 50%;
        margin: 10px auto;
        float: right;
        margin-right: 18px;
    }

    .has-search .form-control {
        padding-left: 2.375rem;
    }

    .has-search .form-control-feedback {
        position: absolute;
        z-index: 2;
        display: block;
        width: 2.375rem;
        height: 2.375rem;
        line-height: 2.375rem;
        text-align: center;
