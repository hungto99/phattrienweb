                    </div>
                    <span id="RoomOrderSpan"></span>
                    <div class="form-group">
                        <label>Địa điểm phòng</label>
                        <select class="selectlocation" id="selectlocation">
                        </select>
                        <span id="RoomLocationSpan"></span>

                    </div>
                    <div class="form-group">
                        <label>Số máy tính</label>
                        <input type="number" id="ComputerNumber" class="form-control" required>
                        <span id="ComputerNumberSpan"></span>

                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy bỏ">
                    <input type="button" id="addroom" class="btn btn-success" value="Thêm">
                </div>
